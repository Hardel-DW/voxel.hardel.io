---
import { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

const variants = {
    variant: {
        outline: "bg-transparent text-zinc-300 border-2 border-zinc-500 hover:bg-white hover:text-black",
        primary: "bg-white tracking-wide cursor-pointer border-2 border-black ring-2 ring-white text-zinc-800 hover:bg-zinc-300",
        link: "bg-transparent hover:text-white text-zinc-300",
        secondary: "bg-pink-700 text-white hover:bg-pink-800 ring-pink-700 tracking-wide cursor-pointer border-2 border-black ring-2"
    },
    size: {
        xs: "px-2 py-1 text-xs",
        sm: "px-4 py-2 text-sm",
        md: "px-6 py-3 text-base",
        lg: "px-8 py-4 text-lg"
    },
    defaultVariant: {
        size: "md",
        variant: "primary",
        color: "default"
    }
};

interface Props extends HTMLAttributes<"a"> {
    variant?: keyof typeof variants.variant;
    size?: keyof typeof variants.size;
}

const { variant = variants.defaultVariant.variant, size = variants.defaultVariant.size, ...rest } = Astro.props;
---

<a
    class={cn([
        "inline-block rounded-xl text-center transition focus-visible:ring-2 truncate",
        variants.variant[variant],
        variants.size[size],
        rest.class
    ])}
    {...rest}
>
    <slot />
</a>
