---
import Layout from "@/components/layouts/Layout.astro";
import Footer from "@/components/layouts/compound/footer.astro";
import Navbar from "@/components/layouts/compound/navbar.astro";

interface Props {
    title?: string;
    description?: string;
    image?: string;
    transparent?: boolean;
}

const { title, description, image, transparent = true }: Props = Astro.props;
---

<Layout title={title} description={description} image={image}>
    <Navbar transparent={transparent}/>

    <slot/>
    <Footer/>
</Layout>