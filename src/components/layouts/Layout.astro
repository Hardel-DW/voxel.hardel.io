---
import '@fontsource/inter/latin.css';
import '../../global.css';
import {ViewTransitions} from 'astro:transitions';
import {SEO} from 'astro-seo';
import Navbar from "./compound/navbar.astro";
import Footer from "./compound/footer.astro";

export interface Props {
    title?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = new URL('/opengraph.webp', Astro.site).toString();
const {title} = Astro.props;
const shownTitle = title ? 'Voxel | ' + title : 'Voxel';
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description"
          content="Voxel, la référence pour tout développeur souhaitant se lancer ou se perfectionner dans la création de mods Minecraft. Offrant des ressources de pointe et des guides avancés, nous accompagnons chaque talent, du novice à l'expert, avec des solutions professionnelles adaptées à vos besoins."/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>

    <SEO
            title={shownTitle}
            description="Voxel, la référence pour tout développeur souhaitant se lancer ou se perfectionner dans la création de mods Minecraft. Offrant des ressources de pointe et des guides avancés, nous accompagnons chaque talent, du novice à l'expert, avec des solutions professionnelles adaptées à vos besoins."
            canonical={canonicalURL}
            twitter={{
                description: 'Voxel, la référence pour tout développeur souhaitant se lancer ou se perfectionner dans la création de mods Minecraft. Offrant des ressources de pointe et des guides avancés, nous accompagnons chaque talent, du novice à l\'expert, avec des solutions professionnelles adaptées à vos besoins.',
                creator: '@Hardel-DW',
                site: 'https://voxel.hardel.fr',
                card: 'summary_large_image'
            }}
            openGraph={{
                basic: {
                    url: canonicalURL,
                    type: 'website',
                    title: shownTitle,
                    image: resolvedImageWithDomain
                },
                image: {alt: 'Voxel'}
            }}
    />
    <ViewTransitions/>
</head>
<body>
<Navbar/>

<slot/>
<Footer/>
</body>
</html>