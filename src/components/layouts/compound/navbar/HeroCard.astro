---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
    title: string;
    description: string;
    image: string;
}

const { title, description, image, ...props }: Props = Astro.props;
---

<a
    class="h-40 group/picture relative cursor-pointer flex flex-col justify-end select-none gap-1 p-3"
    {...props}
>
    <div class="text-xl font-medium text-white leading-none relative z-10">{title}</div>
    <p class="line-clamp-2 text-sm leading-snug text-zinc-400">{description}</p>

    <span
        class="absolute bg-cover rounded-2xl bg-center bg-no-repeat inset-0 size-full z-0 opacity-100 group-hover/picture:opacity-80 transition-opacity duration-200"
        style={`background-image: url(${image}); mask-image: linear-gradient(to top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.35), rgba(0, 0, 0, 1), rgba(0, 0, 0, 1));`}
    />
</a>
 