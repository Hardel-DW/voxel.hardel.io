---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"a"> {
    icon?: string;
    href: string;
    active?: boolean;
    badge?: string | number;
}

const { icon, href, active, badge, class: className, ...props } = Astro.props;
---

<a
    href={href}
    class:list={[
        "flex items-center gap-3 rounded-lg px-3 py-2 text-sm transition-colors",
        active 
            ? "bg-zinc-800 text-zinc-50" 
            : "text-zinc-400 hover:bg-zinc-800/50 hover:text-zinc-50",
        className
    ]}
    {...props}
>
    {icon && (
        <img src={icon} alt="" class="size-4 opacity-75 invert-100" />
    )}
    <span class="flex-1"><slot /></span>
    {badge && (
        <span class="flex h-6 w-6 shrink-0 items-center justify-center rounded-full bg-zinc-800 text-xs">
            {badge}
        </span>
    )}
</a> 