---
import Button from "@/components/ui/button.astro";
import {generateAuthUrl} from "@/lib/lucia";
---


<div class="max-w-full h-full flex items-center justify-center">
    <div class="text-center">
        <h2 class="text-6xl font-bold bg-linear-to-r from-blue-500 to-fuchsia-500 bg-clip-text text-transparent">
            Contenu Premium</h2>
        <p class="text-md mt-2">Vous devez être connecté pour accéder à ce contenu.</p>
        <Button size="xl"
                href={generateAuthUrl(Astro.url.toString())}
                class="mt-6 px-6 py-2 font-semibold space-x-10 inline-flex items-center gap-x-2">
            Se connecter avec Google
            <img src="/icons/company/google.svg" alt="Google" class="w-6 h-6 ml-2"/>
        </Button>
    </div>

    <div class="absolute inset-0 -z-10 top-0 left-0">
        <img src="/images/features/structure/tree.webp" alt="Tree"
             class="min-w-48 w-1/3 animate-levitate absolute top-16 right-0"
             style="filter: drop-shadow(15px 15px 15px rgba(69,48,69,0.32))"/>
        <img src="/images/features/structure/donjon.webp" alt="Leaf"
             class="min-w-48 w-1/3 animate-levitate absolute bottom-16 left-16"
             style="filter: drop-shadow(15px 15px 15px rgba(90,90,90,0.32))"/>
    </div>
</div>