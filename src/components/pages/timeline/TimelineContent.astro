---
import { type CollectionEntry, render } from "astro:content";
import TimelineElement from "./TimelineElement.astro";

type Props = {
    entry: CollectionEntry<"update">;
    index: number;
};

const { entry, index } = Astro.props;
const { Content } = await render(entry);
---

<TimelineElement
    version={entry.data.version}
    date={entry.data.publishDate.toDateString()}
    first={index === 0}
>
    <Content />
</TimelineElement>
