---
import { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";
interface Props extends HTMLAttributes<"svg"> {}

const props = Astro.props;
---

<svg
    {...props}
    class={cn("size-full -z-10 absolute stroke-purple-500/30 [mask-image:radial-gradient(white,transparent_70%)] [stroke-dasharray:5_6] [stroke-dashoffset:10] lg:stroke-[6]", props.class)}
>
    <defs>
        <pattern id="grid" viewBox="0 0 64 64" width="32" height="32" patternUnits="userSpaceOnUse" x="0" y="0">
            <path d="M64 0H0V64" fill="none"></path>
        </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#grid)" stroke-width="0"></rect>
</svg>
