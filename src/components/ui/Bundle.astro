---
import type {HTMLAttributes} from "astro/types";

interface Props extends HTMLAttributes<"div"> {
    asset: string;
}

const props = Astro.props;
---

<div class="min-h-64 flex gap-8 flex-col items-center justify-between cursor-pointer border-zinc-800 px-8 py-10 rounded-3xl shadow-2xl shadow-black transition opacity-75 hover:opacity-100">
    <div>
        <h2 class="text-2xl font-bold">Bundle</h2>
        <p class="text-sm text-zinc-500">Lorem ipsum dolor sit amet consectetur adipisicing elit. Quisquam, quos.</p>
    </div>

    <div class="flex items-center justify-center">
        <img src={props.asset} alt="Bundle" class="h-24 pixelated">
    </div>
</div>
