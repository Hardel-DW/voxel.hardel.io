---
import Video from "@/components/ui/Video.astro";

interface Props {
    url: string;
    title: string;
    description: string;
    section: string;
}

const { url, title, description, section } = Astro.props;
---

<section class="w-3/4 mx-auto my-40">
    <div class="flex gap-8 px-8">
        <p class="text-zinc-100 text-2xl uppercase font-semibold shrink-0 tracking-wider">
            {section}
        </p>

        <div class="flex items-center w-full">
            <img src="/icons/star.svg" alt="star" class="size-6 invert"/>
            <div class="w-full h-px bg-linear-to-r from-white to-transparent"/>
        </div>
    </div>

    <div class="grid items-center grid-cols-12 p-8 gap-8 border-t border-l border-zinc-900 rounded-3xl mt-16 bg-linear-to-br from-black to-transparent">
        <div class="col-span-7 size-full">
            <Video video={url}/>
        </div>
        <div class="col-span-5 flex flex-col gap-8 px-16">
            <h2 class="text-5xl text-white font-extralight">
                {title}
            </h2>
            <p class="text-zinc-400">
                {description}
            </p>
        </div>
    </div>
</section> 