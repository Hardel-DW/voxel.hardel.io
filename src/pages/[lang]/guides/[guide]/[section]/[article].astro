---
import { getCollection, getEntry } from "astro:content";
import Layout from "@/components/layouts/Layout.astro";
import Navigation from "@/components/pages/guide/content/Navigation";
import PageContent from "@/components/pages/guide/content/PageContent.astro";
import Dropdown from "@/components/ui/dropdown.astro";
import { getTranslations } from "@/lib/i18n";

export const prerender = false;
const { translate } = await getTranslations(Astro.url);
const { guide, section, lang, article } = Astro.params;

if (typeof guide !== "string") throw new Error("Missing required parameter 'guide'");
if (typeof section !== "string") throw new Error("Invalid parameter 'section'");
if (typeof lang !== "string") throw new Error("Invalid parameter 'lang'");
if (typeof article !== "string") throw new Error("Invalid parameter 'article'");

const guideEntry = await getEntry("guide", `${lang}/${guide}`);
const posts = await getCollection("guide", ({ data }) => !data.metadata.draft);
if (!guideEntry) throw new Error(`Guide not found: ${guide}`);

const articles = guideEntry.data.sections.flatMap(({ article }) => article.map((i) => ({ ...i })));
const currentIndex = articles.findIndex((element) => element.redirect === article);
const nextArticle = articles[currentIndex + 1] || articles[0];
const previousArticle = articles[currentIndex - 1] || articles[articles.length - 1];
const dropdowns = guideEntry.data.navigation?.map((element) => ({
    url: `/${[lang, element.slug, section, article].join("/")}`,
    id: element.slug,
    title: element.title,
    logo: element.logo
}));
const filteredDropdowns = dropdowns?.filter((element) => element.id !== guide);
const currentDropdown = dropdowns?.find((element) => element.id === guide);
const background = guideEntry.data.metadata.images.src;
const postsParsed = posts.map((post) => ({
    slug: post.id.split("/")[1] || post.id,
    image: post.data.metadata.images,
    locked: post.data.metadata.locked
}));
---

<Layout title={translate["guides.seo.title"]} description={translate["guides.seo.description"]}>
    <div class="flex relative md:p-4 h-dvh">
        <div class="fixed -z-20 inset-0 bg-cover bg-center bg-no-repeat opacity-10 blur-3xl"
             style={{backgroundImage: `url(${background})`}}>
        </div>

        <!-- Listes des Guides -->
        <div style="width: 384px" id="collapse-menu"
             class="@container shrink-0 overflow-hidden transition-[width] duration-500 ease-in-out max-md:absolute max-md:inset-0 max-md:bg-linear-to-br max-md:from-guides-gradient-from max-md:to-guides-gradient-to max-md:z-50 max-md:py-4 max-md:rounded-r-2xl max-md:border max-md:border-zinc-700">
            <div class="w-[384px] flex flex-col h-full relative z-10 px-4 md:pl-0 @sm:pl-0">
                <!-- Top Content -->
                <div>
                    <!-- The Logo and Voxel Title -->
                    <div class="flex w-full items-center justify-between">
                        <a href="/"
                           class="text-lg flex items-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-hidden focus-visible:shadow-outline-indigo rounded-full px-2 -ml-2">
                            <img src="/icons/logo.svg" alt="Voxel" class="w-6 h-6 brightness-90 mx-2"/>
                            <span class="font-bold text-primary">VOXEL</span>
                        </a>
                        <img id="menu-dropdown" src="/icons/menu.svg" alt="menu"
                             class="w-6 h-6 cursor-pointer block md:hidden invert-[75%]"/>
                    </div>

                    <!-- Dropdown redirection to variants Forge/Fabric -->
                    <div>
                        {filteredDropdowns && filteredDropdowns.length > 0 && (
                                <Dropdown id="guides" current={currentDropdown} elements={filteredDropdowns}/>
                        )}
                    </div>
                </div>

                <!-- Middle Content / Chapter Sections / Switch -->
                <Navigation client:idle schema={guideEntry} guides={postsParsed} slug={{lang, guide, section, article}}/>

            </div>
        </div>
 
        <!-- Content -->
        <div class="overflow-x-hidden stack flex bg-content md:border md:border-zinc-900 md:rounded-2xl w-full relative z-0">
            <div class="flex absolute inset-0 p-4 justify-between items-center select-none h-fit gap-x-4">
                <img src="/icons/menu.svg" alt="Menu" id="menu-inner" class="w-6 h-6 invert opacity-75 cursor-pointer"/>

                <h1 class="text-sm text-zinc-400 truncate">{guideEntry.data.metadata.title}</h1>

                <a href="/" class="select-none size-fit">
                    <img src="/icons/logo.svg" alt="Voxel" class="w-6 h-6 opacity-75"/>
                </a>
            </div>


            <div id="content" class="px-8 lg:px-0 pt-12 transition w-full md:w-3/4 justify-self-center">
                        <PageContent previousArticle={previousArticle} nextArticle={nextArticle}
                                     slug={[lang, guide, section, article].join('/')}/>
            </div>
        </div>
    </div>
</Layout>

<script>
    const menuInner = document.getElementById("menu-inner")!;
    const menuDropdown = document.getElementById("menu-dropdown")!;
    const collapseMenu = document.getElementById("collapse-menu")!;

    menuInner.addEventListener("click", () => {
        const check = collapseMenu.style.width === "0px";
        collapseMenu.style.width = check ? "384px" : "0";
    });

    menuDropdown.addEventListener("click", () => {
        collapseMenu.style.width = "0";
    });
</script>