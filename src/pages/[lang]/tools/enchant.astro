---
import { getEntry } from "astro:content";
import Layout from "@/components/layouts/Layout.astro";
import Navbar from "@/components/layouts/compound/navbar.astro";
import EnchantTool from "@/components/pages/tools/enchant/EnchantTool";
import ShiningStars from "@/components/ui/pattern/ShiningStars.astro";
import { getTranslations, names } from "@/lib/i18n";

const { lang, translate } = await getTranslations(Astro.url);
const faqEntry = await getEntry("faq", `${lang}/tool`);
const values = faqEntry.data.values;

export const prerender = true;
export async function getStaticPaths() {
    return names.map((element) => ({
        params: { lang: element.lang }
    }));
}
---

<Layout title={translate["tools.enchantments.home"]} description={translate["tools.enchantments.home.description"]} openGraph={{
    title: translate["tools.enchantments.home"],
    description: translate["tools.enchantments.home.description"],
    image: "/images/tools/configurator.webp"
}}>
    <div class="fixed inset-0">
        <ShiningStars/>
    </div>
    <div class="absolute rounded-full w-3/4 h-1/2 bg-linear-to-r from-[#830335] to-[#311e7696] opacity-20 blur-[10rem] top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2"/>

    <EnchantTool client:only="react" translate={translate} lang={lang} faq={values}>
        <Navbar transparent={false} full={false} className="relative mt-0 mb-8 w-full"/>
    </EnchantTool>
</Layout>