---
import Button from "@/components/button.astro";
import CompoundLayout from "@/components/layouts/CompoundLayout.astro";
import DashedPattern from "@/components/pattern/DashedPattern.astro";
import data from "@/content/data/contact.json";

export const prerender = true;
---

<CompoundLayout title="Contact">
    <img class="hidden xl:block absolute left-0 rotate-90 opacity-10 h-full [mask-image:radial-gradient(100%_100%_at_bottom_left,white,transparent_90%)]"
         src="/icons/circle.svg" alt="box"/>
    <img class="hidden xl:block absolute right-0 top-20 -rotate-90 opacity-20 h-full [mask-image:radial-gradient(100%_100%_at_bottom_left,white,transparent_90%)]"
         src="/icons/circle.svg" alt="box"/>

    <section class="mt-32 mb-20 w-11/12 xl:w-3/4 mx-auto grid grid-cols-6 gap-10 relative">
        <div class="col-span-6 h-72 md:h-96 relative flex items-center justify-center border border-zinc-800 rounded-xl">
            <DashedPattern/>

            <div>
                <h1 class="text-4xl md:text-7xl -tracking-wide text-center font-semibold mb-2">Contactez-nous</h1>
                <div class="w-1/2 h-2 bg-white mx-auto rounded-xl"></div>
            </div>
        </div>

        {data.map((item) => (
                <div class="col-span-6 sm:col-span-3 xl:col-span-2 relative border overflow-hidden border-zinc-800 rounded-xl">
                    <DashedPattern/>

                    <div class="p-8 h-full flex flex-col justify-between">
                        <div>
                            <img src={item.icon} alt="Discord" class="w-12 h-12 invert opacity-90"/>

                            <h2 class="text-2xl font-semibold mt-4">{item.name}</h2>
                            <p class="mt-2 text-zinc-400">{item.description}</p>
                        </div>

                        <Button href={item.link} size="sm" class="mt-8  w-full md:w-fit">
                            {item.button}
                        </Button>
                    </div>
                </div>
        ))}
    </section>
</CompoundLayout>
